# Calculate ini(overlay-calculate.revision)<96 exec=/bin/bash

#-ini(overlay-calculate.revision,96)-#

# key is pkg name, value is current version new reduced version split by space
declare -A map_move=( ["sys-apps/openrc"]="0.22.4 0.22.4_rc73" )

PKGDB=/var/db/pkg
for pkg in ${!map_move[@]}
do
    vers=(${map_move[$pkg]})
    if [[ -d $PKGDB/${pkg}-${vers[0]} ]]
    then
        cp -a $PKGDB/${pkg}-${vers[0]} $PKGDB/${pkg}-${vers[1]}
        rm -rf $PKGDB/${pkg}-${vers[0]}
    fi
done

true
